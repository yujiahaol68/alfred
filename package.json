{
  "name": "alfred",
  "version": "1.0.0",
  "description": "personal ai bulter",
  "main": "build/startup.js",
  "keywords": [
    "ai",
    "chatbot",
    "bot-framework"
  ],
  "scripts": {
    "test": "jest --forceExit",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Typescript,Node\" -c \"cyan.bold,green.bold\" \"npm run ts-watch\" \"npm run serve\"",
    "ts-watch": "tsc --noEmitOnError -w",
    "build": "tsc --noEmitOnError",
    "lint": "tslint -c tslint.json -p tsconfig.json src/**/*.ts --fix",
    "start": "npm run build && npm run watch",
    "serve": "nodemon --watch build/ build/startup.js",
    "serve-debug": "tsc && node --inspect-brk build/startup.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yujiahaol68/alfred.git"
  },
  "author": "Tecker.Yu <tecker_yuknigh@163.com> (https://github.com/yujiahaol68)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yujiahaol68/alfred/issues"
  },
  "homepage": "https://github.com/yujiahaol68/alfred#readme",
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/dotenv": "^4.0.1",
    "@types/express": "^4.0.37",
    "@types/jest": "^20.0.7",
    "@types/lodash": "^4.14.74",
    "@types/mongodb": "^2.2.10",
    "@types/mongoose": "^4.7.21",
    "@types/node": "^8.0.24",
    "@types/superagent": "^3.5.5",
    "@types/supertest": "^2.0.3",
    "concurrently": "^3.5.0",
    "jest": "^20.0.4",
    "mongodb": "^2.2.31",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.8",
    "supertest": "^3.0.0",
    "ts-jest": "^20.0.10",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "botbuilder": "^3.9.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "inversify": "^4.3.0",
    "lodash": "^4.17.4",
    "mongoose": "^4.11.7",
    "reflect-metadata": "^0.1.10",
    "superagent": "^3.6.0"
  }
}
